<adonisControls:AdonisWindow x:Class="GitViewer.Desktop.Views.AppearanceWindow"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:local="clr-namespace:GitViewer.Desktop.Views"
                             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
                             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI" 
                             mc:Ignorable="d"
                             Title="Appearance" 
                             WindowStartupLocation="CenterScreen"
                             Topmost="True"
                             ResizeMode="NoResize"
                             Width="140"
                             Height="80"
                             Icon="/Resources/Icons/github.png">
    <Grid>
        <CheckBox Content="Dark mode" Style="{DynamicResource {x:Static adonisUi:Styles.ToggleSwitch}}"
                  Margin="5"
                  HorizontalAlignment="Center"
                  Checked="ColorModeChanged" Unchecked="ColorModeChanged"/>
    </Grid>
</adonisControls:AdonisWindow>
