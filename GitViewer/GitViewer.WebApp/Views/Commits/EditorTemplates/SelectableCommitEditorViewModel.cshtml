@model SelectableCommitEditorViewModel

<tr>
    <td class="align-self-center mx-sm-2">
        @Html.CheckBoxFor(model => model.Selected, new { item_id=Model.Id })
    </td>
    <td>
        @Html.DisplayFor(model => model.Date)
    </td>
    <td>
        @Html.DisplayFor(model => model.Name)
    </td>
    <td>
        @Html.DisplayFor(model => model.Author)
    </td>
    @Html.HiddenFor(model => model.Id)
</tr>