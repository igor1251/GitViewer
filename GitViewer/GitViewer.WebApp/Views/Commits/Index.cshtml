@model CommitsViewModel
@{
    ViewData["Title"] = "Git repository commits viewer";
}

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <form asp-action="Search" asp-controller="Commits">
                <div class="row mb-4">
                    <fieldset>
                        <legend>Repository</legend>
                        <div class="row p-sm-1">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-2 align-self-center">
                                        <label class="form-label">Owner</label>
                                    </div>
                                    <div class="col-8 align-self-center">
                                        <input class="form-control" type="text" asp-for="Owner" value=@Model.Owner />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row p-sm-1">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-2 align-self-center">
                                        <label class="form-label">Name</label>
                                    </div>
                                    <div class="col-8 align-self-center">
                                        <input class="form-control" type="text" asp-for="Repo" value=@Model.Repo />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row p-sm-1">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-2 align-self-center">
                                        <label class="form-label">Login</label>
                                    </div>
                                    <div class="col-8 align-self-center">
                                        <input class="form-control" type="text" asp-for="Login" value=@Model.Login />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row p-sm-1">
                            <button class="btn btn-primary w-25" name="action" value="SearchRepo">Search</button>
                        </div>
                    </fieldset>
                </div>
            </form>
        </div>
        <div class="col-sm-8">
            <fieldset>
                <legend>Commits</legend>
                <div class="row p-sm-1">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Timestamp</th>
                                <th>Author</th>
                                <th>Comment</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Commits)
                            {
                                <tr>
                                    <td>@item.timestamp</td>
                                    <td>@item.author</td>
                                    <td>@item.comment</td>
                                    <td>@item.description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </fieldset>
        </div>
    </div>
</div>
